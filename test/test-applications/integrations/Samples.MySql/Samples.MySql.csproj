<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ApiVersion Condition="'$(ApiVersion)' == ''">8.0.17</ApiVersion>
    <!-- Required to build multiple projects with the same Configuration|Platform -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>

    <LoadManagedProfilerFromProfilerDirectory>true</LoadManagedProfilerFromProfilerDirectory>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MySql.Data" Version="$(ApiVersion)" />
    <PackageReference Condition="'$(TargetFramework)' != 'net452'" Include="System.Security.Permissions" Version="5.0.0" />
    <PackageReference Condition="'$(TargetFramework)' != 'net452'" Include="System.Configuration.ConfigurationManager" Version="5.0.0" />
    <PackageReference Condition="'$(TargetFramework)' != 'net452'" Include="System.Management" Version="5.0.0" />
    <PackageReference Condition="'$(TargetFramework)' != 'net452'" Include="System.Text.Encoding" Version="4.3.0" />
    <PackageReference Condition="'$(TargetFramework)' != 'net452'" Include="System.Text.Encoding.CodePages" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\dependency-libs\Samples.DatabaseHelper\Samples.DatabaseHelper.csproj" />

    <!-- this referenced project only targets netstandard2.0 -->
    <ProjectReference Condition="'$(TargetFramework)' != 'net452'" Include="..\dependency-libs\Samples.DatabaseHelper.netstandard\Samples.DatabaseHelper.netstandard.csproj" />
  </ItemGroup>

</Project>